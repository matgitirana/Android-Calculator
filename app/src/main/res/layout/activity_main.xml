<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:textSize="20dp"
            android:textAlignment="textEnd"
            android:layout_width="0dp"
            android:layout_height="35dp" android:id="@+id/textView_display1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
    <TextView
            android:textSize="40dp"
            android:textAlignment="textEnd"
            android:layout_width="0dp"
            android:layout_height="55dp" app:layout_constraintTop_toBottomOf="@+id/textView_display1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/textView_display2"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView_display2">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="7"
                    android:onClick="numberClick"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_7"/>
            <Button
                    android:text="8"
                    android:onClick="numberClick"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_8"/>
            <Button
                    android:text="9"
                    android:onClick="numberClick"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_9"/>
            <Button
                    android:text="+"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_plus" android:onClick="basicOperationClick"/>
            <Button
                    android:text="%"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_percent"
                    android:onClick="percentClick"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="4"
                    android:onClick="numberClick"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_4"/>
            <Button
                    android:text="5"
                    android:onClick="numberClick"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_5"/>
            <Button
                    android:text="6"
                    android:onClick="numberClick"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_6"/>
            <Button
                    android:text="-"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_minus" android:onClick="basicOperationClick"/>
            <Button
                    android:text="xʸ"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_potentiation"
                    android:onClick="powClick"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="3"
                    android:onClick="numberClick"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_3"/>
            <Button
                    android:text="2"
                    android:onClick="numberClick"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_2"/>
            <Button
                    android:text="1"
                    android:onClick="numberClick"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_1"/>
            <Button
                    android:text="*"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_multi"
                    android:onClick="basicOperationClick"/>
            <Button
                    android:text="x!"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_factorial"
                    android:onClick="factorialClick"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:layout_weight="60">
                <Button
                        android:text="."
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/button_dot"
                        android:onClick="periodClick"/>
                <Button
                        android:text="0"
                        android:onClick="numberClick"
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/button_0"/>
                <Button
                        android:text="="
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/button_equals"
                        android:onClick="equalsClick"/>
            </TableRow>
            <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_weight="40">
                <TableRow
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="40">
                    <Button
                            android:text="/"
                            android:layout_weight="20"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/button_division"
                            android:onClick="basicOperationClick"/>
                    <Button
                            android:text="sin"
                            android:layout_weight="20"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/button_sine"
                            android:onClick="sinClick"/>
                </TableRow>
                <TableRow
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="40">
                    <Button
                            android:text="cos"
                            android:layout_weight="20"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/button_cosine"
                            android:onClick="cosClick"/>
                    <Button
                            android:text="tan"
                            android:layout_weight="20"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/button_tangent"
                            android:onClick="tanClick"/>
                </TableRow>
            </TableLayout>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Send"
                    android:layout_weight="40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_send" android:onClick="sendClick"/>
            <Button
                    android:text="+/-"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_sign" android:onClick="signClick"/>
            <Button
                    android:text="C"
                    android:onClick="clearClick"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_clear"/>
            <Button
                    android:text="√"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/button_root" android:onClick="rootClick"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>